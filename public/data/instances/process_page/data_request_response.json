{
  "title": "Data-request response",
  "process": {
    "instance": {
      "comment": " this is just for validation. there could be a copy in proces_page/data_request_response.json",
      "name": "data_request_response",
      "services": {
        "process-storage": {
          "title": "Request",
          "bridge": {
            "source": {
              "uri": "instances/bridge/datastorage_bridge.json"
            }
          },
          "ui": {
            "inputFields": {
              "reject_reason": {
                "label": "Reject reason",
                "textArea": true
              }
            }
          },
          "activities": {
            "readRequest": {
              "title": "Read request",
              "bridgeCapability": "read_dataset_file",
              "parameters": {
                "d": {
                  "queryParam": "request_id"
                }
              },
              "subActivities": {
                "displayRequest": {
                  "title": "Display request",
                  "moduleFunction": "createRequestHtml",
                  "parameters": {
                    "requestData": {
                      "parent": true
                    }
                  },
                  "ui": {
                    "resultsAsOpenInput": "start"
                  }
                }
              },
              "storeResult": {
                "context": "process",
                "key": "requestData"
              },
              "ui": {
                "alert": false,
                "includeInStatus": false
              }
            },
            "reject": {
              "title": "Reject request",
              "moduleFunction": "rejectRequest",
              "parameters": {
                "requestData": {
                  "store": {
                    "context": "process",
                    "key": "requestData"
                  }
                },
                "rejectReason": {
                  "field": "reject_reason"
                }
              }
            },
            "acceptRequest": {
              "title": "Accept request",
              "moduleFunction": "acceptRequest",
              "parameters": {
                "requestData": {
                  "store": {
                    "context": "process",
                    "key": "requestData"
                  }
                }
              },
              "storeResult": {
                "context": "process",
                "key": "datasetId"
              }
            }
          },
          "autostart": [
            "readRequest"
          ]
        },
        "dataverse": {
          "title": "Dataverse settings",
          "parameters": {
            "identifier": {
              "constant": "bcn-tetst"
            }
          },
          "ui": {
            "inputFields": {
              "apiKey": {
                "label": "API Key",
                "default": ""
              }
            }
          },
          "activities": {
            "read_dataset_metadata": {
              "title": "Read dataset metadata",
              "bridgeCapability": "read_dataset_metadata",
              "parameters": {
                "persistentId": {
                  "store": {
                    "context": "process",
                    "key": "datasetId"
                  }
                }
              },
              "storeResult": {
                "context": "process",
                "key": "datasetMetadata"
              },
              "ui": {
                "alert": false,
                "includeInStatus": false
              }
            },
            "create_dataset": {
              "title": "Upload new dataset",
              "bridgeCapability": "create_dataset",
              "requestBody": {
                "data": {
                  "store": {
                    "context": "process",
                    "key": "newDatasetMetadata"
                  }
                }
              },
              "storeResult": {
                "context": "process",
                "key": "newDatasetId"
              },
              "debug": {
                "execute": true,
                "resultData": {
                  "status": "OK",
                  "data": {
                    "id": 453,
                    "persistentId": "doi:10.5072/FK2/HL2C2N"
                  }
                }
              }
            },
            "list_files": {
              "title": "List dataset files",
              "bridgeCapability": "list_dataset_files",
              "parameters": {
                "persistentId": {
                  "store": {
                    "context": "process",
                    "key": "datasetId"
                  }
                },
                "versionId": {
                  "constant": ":draft"
                }
              },
              "storeResult": {
                "context": "process",
                "key": "datasetFiles"
              }
            },
            "download_file": {
              "title": "Download file",
              "bridgeCapability": "download_dataset_file",
              "parameters": {
                "serverUri": {
                  "constant": "https://demo.dataverse.org"
                },
                "apiKey": {
                  "constant": "682f1775-6274-415a-be1a-4312ff450f63"
                },
                "fileId": {
                  "field": "file",
                  "dynamic": true
                }
              }
            },
            "addFile": {
              "title": "Add File",
              "bridgeCapability": "write_dataset_file",
              "parameters": {
                "persistentId": {
                  "store": {
                    "context": "process",
                    "key": "newDatasetId.data.persistentId"
                  }
                }
              },
              "requestBody": {
                "file": {
                  "fileInput": "dataset_file"
                }
              }
            },
            "copy_files": {
              "title": "Upload files",
              "bridgeCapability": "copy_dataset_files",
              "debug": {
                "execute": true
              },
              "parameters": {
                "dataset_metadata": {
                  "store": {
                    "context": "process",
                    "key": "datasetMetadata"
                  }
                }
              }
            },
            "createPrivateUrl": {
              "title": "Create private url",
              "bridgeCapability": "create_dataset_share_url",
              "parameters": {
                "persistentId": {
                  "store": {
                    "context": "process",
                    "key": "newDatasetId.data.persistentId"
                  }
                }
              },
              "debug": {
                "execute": true,
                "resultData": {
                  "status": "OK",
                  "data": {
                    "roleAssignment": {
                      "id": 377,
                      "assignee": "#453",
                      "roleId": 8,
                      "_roleAlias": "member",
                      "privateUrlToken": "2cca246d-2dd1-45a9-9dfa-8a3b81449791",
                      "definitionPointId": 453
                    }
                  }
                }
              },
              "storeResult": {
                "context": "process",
                "key": "privateUrlResponse"
              }
            }
          }
        }
      },
      "common": {
        "ui": {
          "buttons": {
            "accept": {
              "label": "Accept request",
              "triggerActivity": "acceptRequest"
            },
            "reject": {
              "label": "Reject request",
              "activityService": "process-storage",
              "triggerActivity": "reject"
            }
          }
        },
        "activities": {
          "acceptRequest": {
            "title": "Accept request",
            "moduleFunction": "acceptRequest",
            "parameters": {
              "requestData": {
                "store": {
                  "context": "process",
                  "key": "requestData"
                }
              }
            },
            "storeResult": {
              "context": "process",
              "key": "datasetId"
            },
            "subActivities": {
              "readDataset": {
                "title": "Read dataset",
                "serviceName": "dataverse",
                "activityName": "read_dataset_metadata"
              },
              "changeDatasetMetaData": {
                "title": "Change dataset metadata",
                "moduleFunction": "changeDatasetMetaData",
                "parameters": {
                  "dataset_metadata": {
                    "store": {
                      "context": "process",
                      "key": "datasetMetadata"
                    }
                  }
                },
                "storeResult": {
                  "context": "process",
                  "key": "newDatasetMetadata"
                }
              },
              "uploadNewDataset": {
                "title": "Upload new dataset",
                "serviceName": "dataverse",
                "activityName": "create_dataset"
              },
              "uploadFile": {
                "title": "Upload files",
                "serviceName": "dataverse",
                "activityName": "copy_files"
              },
              "createPrivateUrl": {
                "title": "Create private url",
                "serviceName": "dataverse",
                "activityName": "createPrivateUrl"
              },
              "sendAcceptEmail": {
                "title": "Send accept email",
                "moduleFunction": "sendAcceptEmail",
                "parameters": {
                  "requestData": {
                    "store": {
                      "context": "process",
                      "key": "requestData"
                    }
                  },
                  "privateUrl": {
                    "store": {
                      "context": "process",
                      "key": "privateUrlResponse.data.link"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "scriptUri": "http://localhost:8080/public/data/scripts/process/data_request.js"
    }
  },
  "services": {
    "process-storage": {
      "ui": {
        "sections": {
          "status": {
            "display": false
          },
          "output": {
            "display": false
          }
        }
      }
    },
    "dataverse": {
      "ui": {
        "sections": {
          "status": {
            "display": false
          },
          "output": {
            "display": false
          }
        }
      },
      "bridge": {
        "server": {
          "constant": "https://demo.dataverse.org"
        },
        "source": {
          "instance": {
            "execute": {
              "openapiSchemaUri": "openapi/dataverse_openapi.json"
            },
            "capabilities": {
              "read_dataset_metadata": {
                "operation": {
                  "path": "/api/datasets/:persistentId/",
                  "method": "get"
                }
              },
              "create_dataset": {
                "operation": {
                  "path": "/api/dataverses/{identifier}/datasets",
                  "method": "post"
                }
              },
              "create_dataset_share_url": {
                "operation": {
                  "path": "/api/datasets/:persistentId/privateUrl",
                  "method": "post"
                }
              },
              "write_dataset_file": {
                "operation": {
                  "path": "/api/datasets/:persistentId/add",
                  "method": "post"
                }
              },
              "list_dataset_files": {
                "operation": {
                  "path": "/api/datasets/:persistentId/versions/{versionId}/files",
                  "method": "get"
                }
              },
              "download_dataset_file": {
                "functionName": "module_downloadFile"
              },
              "copy_dataset_files": {
                "functionName": "copy_dataset_files"
              }
            },
            "supportModuleUri": "http://localhost:8080/public/data/scripts/bridge_support/dataverse_support_module.js"
          }
        },
        "authorization": {
          "ApiKeyAuth": {
            "field": "apiKey"
          }
        }
      }
    }
  },
  "common": {
    "ui": {
      "sections": {
        "status": {
          "display": false
        }
      }
    }
  },
  "local_prefix_path": "public/data/"
}